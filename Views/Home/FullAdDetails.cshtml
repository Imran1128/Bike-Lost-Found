@model FullAdViewModel
@{
    ViewData["Title"] = "Full Details";
    var BikePhoto = Url.Content("~/Images/" + Model.bikeAdvertisement.BikePhoto);
}

<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="MyAdList" asp-controller="Home">My Ad List</a></li>
                <li class="breadcrumb-item active" aria-current="page">Full Ad Details</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="@BikePhoto" alt="@Model.bikeAdvertisement.Model" class="img-fluid" asp-append-version="true">
                        <h4 class="mt-3">@Model.bikeAdvertisement.Model</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <h1 class="fw-bolder">Bike Information</h1>
                        <hr />
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Brand:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.Brand</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Registration Number:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.BikeRegNo</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Model:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.Model</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Kilometers Run:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.KilometersRun</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Engine Capacity:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.EngineCapacity</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Price:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.Price</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Chassis Number:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.ChassisNumber</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Engine Number:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.EngineNumber</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Description:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.Description</div>
                        </div>

                        <h1 class="fw-bolder mt-4">Owner Information</h1>
                        <hr />
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Owner's Name:</h6></div>
                            <div class="col-sm-9 text-secondary">@Model.bikeAdvertisement.OwnerName</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Owner's Email:</h6></div>
                            <div class="col-sm-9 text-secondary">
                                <i class="fa-solid fa-envelope pr-1"></i>@Model.bikeAdvertisement.OwnerEmail
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Owner's Phone Number:</h6></div>
                            <div class="col-sm-9 text-secondary">
                                <i class="fa-solid fa-phone pr-1"></i>@Model.bikeAdvertisement.OwnerPhone
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3"><h6 class="mb-0">Owner's Address:</h6></div>
                            <div class="col-sm-9 text-secondary">
                                <i class="fa-solid fa-address-book pr-1"></i>@Model.bikeAdvertisement.OwnerAddress
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
