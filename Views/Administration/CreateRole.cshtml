@model RoleManagerViewModel
@{
    ViewData["Title"] = "Create Role";
}

<div class="container">
    <h1>Create Role</h1>
    <hr/>
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div>
            <label class="form-label" asp-for="RoleName"></label>
            <input class="form-control" asp-for="RoleName" />
            <span class="text-danger" asp-validation-for="RoleName"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-primary" type="submit">Create</button>
            <a class="btn btn-info" asp-action="" asp-controller="">Cancel</a>
        </div>
    </form>
</div>
